<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fundo da Barra (Borda Preta) com Padding -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Fundo branco -->
            <stroke android:width="3dp" android:color="#000000"/> <!-- Borda preta de 2dp -->
            <corners android:radius="8dp"/> <!-- Cantos arredondados -->
            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="3dp"
                android:bottom="3dp"/> <!-- Padding interno para que o preenchimento nÃ£o ultrapasse as bordas -->
        </shape>
    </item>

    <!-- Barra de Progresso (Preenchimento Verde) com ajuste de tamanho -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#77C277"/> <!-- Preenchimento verde -->
                <corners android:radius="6dp"/> <!-- Cantos arredondados um pouco menores para ficar dentro da borda -->
            </shape>
        </clip>
    </item>
</layer-list>
